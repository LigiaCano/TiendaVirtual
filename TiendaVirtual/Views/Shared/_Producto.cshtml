@model IEnumerable<TiendaVirtual.Models.Producto>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Foto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Precio)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td width="40%">
           @* @Html.DisplayFor(modelItem => item.Nombre)*@
            @Html.ActionLink(item.Nombre, "Details", new { id = item.Id })
        </td>
        <td width="30%">
            <img src="@Html.DisplayFor(modelItem => item.Foto)" height="100" width="100" />
            
        </td>
        <td width="20%">
            @Html.DisplayFor(modelItem => item.Precio)
        </td>
        <td width="10%">
            @if (item.Stock > 0)
            {
                @Html.ActionLink("Add to Cart", "AddProducto", "Carrito", new { id = item.Id }, null)
            }
            else
            {
                @Html.Label("Agotado", new { @class = "text-danger" })
            }
               
        </td>
    </tr>
}
</table>

